{% if advanced--font--typekit-id.size > 0 %}
  {% if advanced--font--logo--typekit.size > 0 or advanced--font--nav--typekit.size > 0 or advanced--font--accent--typekit.size > 0 or advanced--font--heading--typekit.size > 0 or advanced--font--text--typekit.size > 0 %}
    {% assign typekit_enabled = true %}
  {% endif %}
{% endif %}

{% if google_font_families.size > 0 or typekit_enabled %}
<script>
  WebFontConfig = {
    {% if typekit_enabled %}
    typekit: { id: '{{ advanced--font--typekit-id }}' },
    {% endif %}
    {% if google_font_families.size > 0 %}
    google: { families: [{{ google_font_families }}] }
    {% endif %}
  };
</script>
<script src="//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js"></script>
